{
    "name": "@vesta-cx/db",
    "version": "0.0.1",
    "description": "Shared Drizzle ORM schema for vesta D1 database",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "lint": "eslint .",
        "format": "prettier --write .",
        "db:generate": "drizzle-kit generate",
        "db:studio": "drizzle-kit studio"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./schema": {
            "types": "./dist/schema/index.d.ts",
            "import": "./dist/schema/index.js"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.20.0",
    "dependencies": {
        "drizzle-orm": "^0.45.1"
    },
    "devDependencies": {
        "drizzle-kit": "^0.31.8",
        "typescript": "^5.9.3"
    }
}
